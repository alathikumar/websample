<div class="row">
    <div class="col-md-12">
        {{#unless employee}}
        <div class="col-md-12 text-center">
            <div class="not-found-block">
                <strong>{{message}}</strong>
            </div>
        </div>
        {{else}}
        <br>
        <h2>{{employee.firstName}} {{employee.lastName}} - Employee: {{employee.employeeNum}}</h2>
        <hr />
        <form method="POST" action="/employee/update">
            <input type="hidden" name="employeeNum" value="{{employee.employeeNum}}">
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstName">First Name:</label>
                            <input class="form-control" id="firstName" name="firstName" type="text"
                                value="{{employee.firstName}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="lastName">Last Name:</label>
                            <input class="form-control" id="lastName" name="lastName" type="text"
                                value="{{employee.lastName}}" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email:</label>
                            <input class="form-control" type="email" name="email" required 
                            value="{{employee.email}}"/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Social Security Num:</label>
                            <input class="form-control" type="text" name="SSN" maxlength="9" required readonly 
                            value="{{employee.SSN}}"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Address (Street):</label>
                            <input class="form-control" type="text" name="addressStreet" required 
                            value="{{employee.addressStreet}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Address (City):</label>
                            <input class="form-control" id="addressCity" type="text" name="addressCity" 
                            required  value="{{employee.addressCity}}"/>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Address (State):</label>
                            <input class="form-control" type="text" name="addressState" required 
                            value="{{employee.addressState}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Address (Zip Code):</label>
                            <input class="form-control" type="text" name="addressPostal" maxlength="6" 
                            required value="{{employee.addressPostal}}" />
                        </div>
                    </div>
                </div>
            </fieldset>

            <fieldset>
                <legend>Company Information</legend>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Manager:</label>
                            <input class="form-control" type="checkbox" name="isManager" 
                            {{#if employee.isManager}}checked{{/if}}/>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Employee's Manager Number:</label>
                            <input class="form-control" type="text" name="employeeManagerNum" 
                            value="{{employee.employeeManagerNum}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Status:</label><br />
                            <label class="checkbox-inline">
                                <input type="radio" value="Full Time" name="status" required 
                                {{#equal employee.status "Full Time"}}checked{{/equal}} /> Full Time
                            </label>
                            <label class="checkbox-inline">
                                <input type="radio" value="Part Time" name="status" required 
                                {{#equal employee.status "Part Time"}}checked{{/equal}} /> Part Time
                            </label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Department</label>
                            <select class="form-control" name="department" required>
                                <option value="1" {{#equal employee.department 1}}selected{{/equal}}>Creative Services</option>
                                <option value="2" {{#equal employee.department 2}}selected{{/equal}}>Product Development</option>
                                <option value="3" {{#equal employee.department 3}}selected{{/equal}}>Marketing</option>
                                <option value="4" {{#equal employee.department 4}}selected{{/equal}}>Strategic Planning</option>
                                <option value="5" {{#equal employee.department 5}}selected{{/equal}}>Accounting</option>
                                <option value="6" {{#equal employee.department 6}}selected{{/equal}}>Human Resources</option>
                                <option value="7" {{#equal employee.department 7}}selected{{/equal}}>Quality Analysis</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Hire Date</label>
                            <input class="form-control" type="text" name="hireDate" placeholder="mm/dd/yyyy" required readonly
                                value="{{employee.hireDate}}"
                                pattern="^(([0][1-9])|([1][0-2]))(\/)(([0][1-9])|[1-2][0-9]|([3][0-1]))(\/)(((19)[0-9]{2})|((2)[0-9]{3}))$" />
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary float-right" value="Update Employee" /><br /><br /><br />
        </form>
        {{/unless}}
    </div>
</div>